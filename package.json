{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "del-cli": "^5.0.0",
    "turbo": "^1.7.4"
  },
  "scripts": {
    "clean:packages": "yarn global add del-cli && del-cli node_modules && del-cli **/*/node_modules",
    "format:all": "turbo run format",
    "lint:all": "turbo run lint",
    "lint-staged:all": "turbo run lint-staged",
    "start:all": "turbo run start",
    "start:editor": "turbo run start --scope neodash",
    "start:docs": "turbo run start --scope docs",
    "start:gallery": "turbo run start --scope neodash-gallery",
    "build:editor": "turbo run build --scope neodash",
    "build:docs": "turbo run build --scope docs",
    "build:gallery": "turbo run build --scope neodash-gallery",
    "build-minimal:editor": "turbo run build --scope neodash",
    "test:editor": "turbo run test --scope neodash",
    "test-headless:editor": "turbo run test-headless --scope neodash"
  }
}
